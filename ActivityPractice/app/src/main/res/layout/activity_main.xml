<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/order_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/order_button"
        app:layout_constraintStart_toEndOf="@+id/textViewOrder"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="確認餐點"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewOrder"
        app:layout_constraintTop_toBottomOf="@+id/textViewOrder" />

    <TextView
        android:id="@+id/orderListElement2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="甜度"
        app:layout_constraintStart_toStartOf="@+id/textViewOrder"
        app:layout_constraintTop_toBottomOf="@+id/orderListTitle" />

    <TextView
        android:id="@+id/orderListElement3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="冰塊"
        app:layout_constraintStart_toStartOf="@+id/textViewOrder"
        app:layout_constraintTop_toBottomOf="@+id/orderListElement2" />
</androidx.constraintlayout.widget.ConstraintLayout>